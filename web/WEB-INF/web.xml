<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <servlet>
        <servlet-name>PLDTSHDisplayBooksServlet</servlet-name>
        <servlet-class>controller.PLDTSHDisplayBooksServlet</servlet-class>
        </servlet>
    <servlet-mapping>
        <servlet-name>PLDTSHDisplayBooksServlet</servlet-name>
        <url-pattern>/PLDTSHDisplayBooks</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PLDTSHAddBooksServlet</servlet-name>
        <servlet-class>controller.PLDTSHAddBooksServlet</servlet-class>
        </servlet>
    <servlet-mapping>
        <servlet-name>PLDTSHAddBooksServlet</servlet-name>
        <url-pattern>/PLDTSHAddBooks</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/PLDTSHError.jsp</location>
    </error-page>
</web-app>