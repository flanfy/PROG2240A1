<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>PLDTSHDisplayBooksServlet</servlet-name>
        <servlet-class>club.admin.PLDTSHDisplayBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PLDTSHAddBookServlet</servlet-name>
        <servlet-class>club.admin.PLDTSHAddBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PLDTSHLoanServlet</servlet-name>
        <servlet-class>club.cart.PLDTSHLoanServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PLDTSHCartServlet</servlet-name>
        <servlet-class>club.cart.PLDTSHCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PLDTSHClearCartServlet</servlet-name>
        <servlet-class>club.cart.PLDTSHClearCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PLDTSHMemberAdmin</servlet-name>
        <servlet-class>club.admin.PLDTSHMemberAdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PLDTSHLoanServlet</servlet-name>
        <url-pattern>/PLDTSHLoan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PLDTSHCartServlet</servlet-name>
        <url-pattern>/PLDTSHCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PLDTSHClearCartServlet</servlet-name>
        <url-pattern>/PLDTSHClearCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PLDTSHMemberAdmin</servlet-name>
        <url-pattern>/PLDTSHMemberAdminController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/PLDTSHError.jsp</location>
    </error-page>
</web-app>
